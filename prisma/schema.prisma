generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// User Type ENUM
enum UserType {
    employee
    admin
}

// Gender Type ENUM
enum GenderType {
    male
    female
    other
}

// Employee type enum (contract, permanent, temporary)
enum EmployeeType {
    contract
    permanent
    temporary
}

enum EmployeeStatus {
    working
    not_working
}

model User {
    id             Int            @id @default(autoincrement())
    email          String         @unique
    password       String
    full_name      String
    user_type      UserType
    joined_date    DateTime
    contact_number String
    address        String
    gender         GenderType
    type           EmployeeType
    date_of_birth  DateTime
    status         EmployeeStatus
    Branch         Int // from table branch (user sets this)
    Department     Int // from table of department (user sets this)
    Designation    Int // from table of designation (user sets this)
    createdAt      DateTime       @default(now())
}

// SideNavBarMenu

model Menu {
    id          Int      @id @unique @default(autoincrement())
    name        String
    description String
    url         String
    order_id    Int
    access_to   UserType
}

// Attendance table
model Attendance {
    id                 Int      @id @default(autoincrement())
    employee_id        Int
    attendance_of_date DateTime @db.Date // Stores ONLY date (YYYY-MM-DD)
    created_date       DateTime @default(now())
    created_by         Int
    updated_date       DateTime @default(now())
    updated_by         Int
}

// enum punch type
enum PunchType {
    IN
    OUT
}

// Attendance log table (this table relations with Attendance (not foregin key relation))
model AttendanceLog {
    id            Int       @id @default(autoincrement())
    attendance_id Int
    punch_time    DateTime
    punchType     PunchType // enum
}
